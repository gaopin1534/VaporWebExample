#set("title") { Todos }

#set("body") {

<div class="container">
    <div class="page-header">
        <h1>Todos</h1>
    </div>
    <ul class="list-group">
        #for(todo in todos) {
        <li class="list-group-item">#(todo.id): #(todo.name)</li>
        }
    </ul>
    <div class="pull-right">
        <a href="/todos/new">
            <button type="button" class="btn btn-primary btn-lg">Add Todo</button>
        </a>
    </div>
</div>
}

#embed("base")
